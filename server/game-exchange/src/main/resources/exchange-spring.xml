<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd  ">

    <context:annotation-config/>

    <bean id="poolFactory" class="com.exchange.manager.pool.factory.SerivcesPoolFactory"/>

    <bean id="groupServicePoolDispatcher" class="com.exchange.manager.pool.GroupServicePoolDispatcher">
        <property name="poolFactory" ref="poolFactory"/>
        <property name="runnableFactory" ref="businessController"/>
    </bean>

    <bean class="com.exchange.manager.NodeSwapManager">
        <property name="groupServicePoolDispatcher" ref="groupServicePoolDispatcher"/>
    </bean>

</beans>